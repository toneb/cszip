{
  "compilerOptions": {
    "module": "ES6",
    "target": "ESNext",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "Node",
    "outDir": "build",
    "rootDir": "src",
    "skipLibCheck": true,
    "removeComments": true,
    "declaration": true
  },
  "include": ["src/**/*"]
}